#include "basic.h"

float4 BasicPrimitive_PS(BasicPrimitive_VertexAttr input) : SV_Target
{
    float ambientStrength = 0.5f;

    float3 lightDir = -float3(1.f, -1.5f, 1.f);
    float3 lightColor = float3(0.5f, 0.5f, 0.5f);

    float3 ambient = ambientStrength * lightColor;

    float diff = max(dot(input.normal, lightDir), 0.f);
    float3 diffuse = diff * lightColor;

    float3 result = ambient + diffuse;

    return float4(result, 1.0f);
}